@model BulkyBook.Models.Product

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Company</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                <div class="form-floating py-2 col-12">
                    <input asp-for="Title" disabled type="text" class="form-control border-0 shadow"  />
                    <label asp-for="Title" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ISBN" disabled type="text" class="form-control border-0 shadow " />
                    <label asp-for="ISBN" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Author" disabled type="text" class="form-control border-0 shadow " />
                    <label asp-for="Author" class="ms-2"></label>
                </div>
                <div class="py-2 col-12">
                    <label asp-for="Description" class="ms-2 text-muted"></label>
                    <textarea asp-for="Description" disabled class="form-control border-0 shadow " cols="4" rows="4"></textarea>
                </div>
                <div class="row">
                    <div class="form-floating py-2 col-6">
                        <input asp-for="ListPrice" type="number" disabled class="form-control border-0 shadow " />
                        <label asp-for="ListPrice" class="ms-2"></label>
                    </div>
                    <div class="form-floating py-2 col-6">
                        <input asp-for="Price" type="number" disabled class="form-control border-0 shadow " />
                        <label asp-for="Price" class="ms-2"></label>
                    </div>
                    <div class="form-floating py-2 col-6">
                        <input asp-for="Price50" type="number" disabled class="form-control border-0 shadow " />
                        <label asp-for="Price50" class="ms-2"></label>
                    </div>
                    <div class="form-floating py-2 col-6">
                        <input asp-for="Price100" type="number" disabled class="form-control border-0 shadow " />
                        <label asp-for="Price100" class="ms-2"></label>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary form-control">Back To List</a>
                    </div>
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

