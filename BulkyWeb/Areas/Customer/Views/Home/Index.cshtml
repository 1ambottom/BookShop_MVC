@model IEnumerable<Product>

<div class="card-group">
    @foreach (var product in Model)
    {
        <div class="card p-1 m-1">
            <img src="@product.ImageUrl" class="card-img-top p-2"/>
            <div class="card-body">
                <h5 class="card-title fw-bold">@product.Title</h5>
                <h6 class="card-title">By:@product.Author</h6>
                <p class="card-text">
                    <small class="text-muted">List Price: <span class="text-decoration-line-through">@product.ListPrice</span><span>&#3647;</span></small>
                    <br />
                    <small class="text-muted">As low as: @product.Price100<span>&#3647;</span></small>
                </p>
            </div>
            <div class="row text-center m-3">
                <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary bg-gradient">Details</a>
            </div>
        </div>
    }
</div>