@model List<Bulky.Models.Category>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Category List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="justify-content-end row pe-2">
            <a asp-controller="Category" asp-action="Create" class="btn btn-dark" style="width:150px;"><i class="bi bi-plus fs-5 pe-2"></i>Create</a>
        </div>
        <table class="table table-bordered table-striped mt-4">
            <thead width="100%">
                <tr>
                    <th width="45%">
                        Category Name
                    </th>
                    <th width="45%">
                        Display Order
                    </th>
                    <th width="10%">Options</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>
                            @obj.Name
                        </td>
                        <td>
                            @obj.displayOrder
                        </td>
                        <td>
                            <div class="w-75 btn-group align-items-center" role="group">
                                <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-dark mx-2">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>
                                <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash3"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
